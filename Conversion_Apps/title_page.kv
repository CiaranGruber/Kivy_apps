BoxLayout:
    id: main_box
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'vertical'
            Button:
                id: chooser
                text: 'Uni Grade Checker'
                on_press: app.choose_application()
            Button:
                text: 'Other Stuff'
        Button:
            size_hint_y: 0.2
            text: 'Quit'
            on_release: app.stop()
        Label:
            id: output
            size_hint_y: 0.2
            text: ''
    Popup:
        id: grading_popup
        title: 'Grade Checker'
        size_hint: 0.7, 0.7
        on_parent:
            if self.parent == main_box: self.parent.remove_widget(self)
        BoxLayout:
            #orientation: 'vertical'
            orientation: 'horizontal'
            BoxLayout:
                orientation: 'vertical'
                size_hint_x: 0.3
                Button:
                    text: 'Clear'
                    on_press: app.grade_clear_all()
                Button:
                    text: 'Calculate Grade'
                    on_press: app.grade_calculate_grade()
            BoxLayout:
                orientation: 'vertical'
                TextInput:
                    id: grade_input_grade
                    text: ''
                Label:
                    id: grade_output_label
                    text: 'Enter your grade'
                    color: (1, 1, 0, 1)